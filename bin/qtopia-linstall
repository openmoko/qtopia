#!/usr/bin/perl

$basedir="$ENV{QPEDIR}/";
if ( $ARGV[0] eq "-d" ) {
    shift;
    $basedir=shift;
}

$dir = "$basedir/i18n";
mkdir $dir,0700 if ! -d $dir;

while (<>) {
    if ( /^TRANSLATIONS\s*=\s*(.*)/ ) {
	for $ts ( split " ", $1 ) {
	    ($target,$locale) = $ts =~ /^(.*)-(.*)\.ts$/;
	    $dir = "$basedir/i18n/$locale";
	    mkdir $dir,0700 if ! -d $dir;
	    system("cp $target-$locale.qm $dir/$target.qm") && exit 1;
	}
    }
}
