#############################################################################

####### Compiler, tools and options

CXX	=	$(SYSCONF_CXX) $(QT_CXX_MT)
CXXFLAGS=	$(SYSCONF_CXXFLAGS_QTOPIA) $(SYSCONF_CXXFLAGS_QT) $(SYSCONF_CXXFLAGS) $(SYSCONF_CXXFLAGS_LIB)
CC	=	$(SYSCONF_CC) $(QT_C_MT)
CFLAGS	=	$(SYSCONF_CFLAGS) $(SYSCONF_CFLAGS_LIB)
INCPATH =	-I$(QPEDIR)/include
LFLAGS	=	$(SYSCONF_LFLAGS_QTOPIA) $(SYSCONF_RPATH_QTOPIA) $(SYSCONF_LFLAGS_QT) $(SYSCONF_RPATH_QT) $(SYSCONF_LFLAGS) $(QT_LFLAGS_MT)
LIBS	=	$(SUBLIBS) -lqpe $(SYSCONF_LIBS_QTOPIA) $(SYSCONF_LIBS_QT) $(SYSCONF_LIBS_QTAPP)
MOC	=	$(SYSCONF_MOC)
UIC	=	$(SYSCONF_UIC)

####### Target

DESTDIR = $(QPEDIR)/plugins/applets/
VER_MAJ = 1
VER_MIN = 0
VER_PATCH = 0
TARGET	= netmonapplet
TARGET1 = lib$(TARGET).so.$(VER_MAJ)

####### Files

HEADERS =	netmon.h \
		netmonappletimpl.h
SOURCES =	netmon.cpp \
		netmonappletimpl.cpp
OBJECTS =	netmon.o \
		netmonappletimpl.o \
		netpw.o
INTERFACES =    netpw.ui
UICDECLS =      netpw.h
UICIMPLS =      netpw.cpp
SRCMOC	=	moc_netmon.cpp \
		netmon.moc \
		moc_netpw.cpp
OBJMOC	=	moc_netmon.o \
		moc_netpw.o


####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules


all: $(DESTDIR)$(SYSCONF_LINK_TARGET)

$(DESTDIR)$(SYSCONF_LINK_TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) $(SUBLIBS)
	$(SYSCONF_LINK_LIB)

moc: $(SRCMOC)

tmake:
	tmake netmonapplet.pro

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(UICIMPLS) $(UICDECLS)
	-rm -f *~ core
	-rm -f allmoc.cpp

####### Extension Modules

listpromodules:
	@echo 

listallmodules:
	@echo 

listaddonpromodules:
	@echo 

listaddonentmodules:
	@echo 


REQUIRES=

####### Sub-libraries


###### Combined headers



####### Compile

netmon.o: netmon.cpp \
		netmon.moc \
		netmon.h \
		netpw.h \
		$(QPEDIR)/include/qpe/resource.h \
		$(QPEDIR)/include/qpe/network.h \
		$(QPEDIR)/include/qtopia/qpeglobal.h \
		$(QPEDIR)/include/qpe/qcopenvelope_qws.h

netmonappletimpl.o: netmonappletimpl.cpp \
		netmon.h \
		netmonappletimpl.h \
		$(QPEDIR)/include/qpe/taskbarappletinterface.h \
		$(QPEDIR)/include/qpe/qcom.h \
		$(QPEDIR)/include/qtopia/qpeglobal.h \
		$(QPEDIR)/include/qtopia/quuid.h

netpw.h: netpw.ui
	$(UIC) netpw.ui -o $(INTERFACE_DECL_PATH)/netpw.h

netpw.cpp: netpw.ui
	$(UIC) netpw.ui -i netpw.h -o netpw.cpp

netpw.o: netpw.cpp \
		netpw.h \
		netpw.ui

moc_netmon.o: moc_netmon.cpp \
		netmon.h

moc_netpw.o: netmon.moc \
		netmon.cpp \
		netmon.h \
		netpw.h \
		$(QPEDIR)/include/qpe/resource.h \
		$(QPEDIR)/include/qpe/network.h \
		$(QPEDIR)/include/qtopia/qpeglobal.h \
		$(QPEDIR)/include/qpe/qcopenvelope_qws.h

moc_netmon.cpp: netmon.h
	$(MOC) netmon.h -o moc_netmon.cpp

netmon.moc: netmon.cpp
	$(MOC) netmon.cpp -o netmon.moc

moc_netpw.cpp: netpw.h
	$(MOC) netpw.h -o moc_netpw.cpp


