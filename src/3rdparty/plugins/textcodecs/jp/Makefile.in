#############################################################################

####### Compiler, tools and options

CXX	=	$(SYSCONF_CXX) $(QT_CXX_MT)
CXXFLAGS=	$(SYSCONF_CXXFLAGS_QTOPIA) $(SYSCONF_CXXFLAGS_QT) $(SYSCONF_CXXFLAGS) $(SYSCONF_CXXFLAGS_LIB) -DQTOPIA_APP_INTERFACE
CC	=	$(SYSCONF_CC) $(QT_C_MT)
CFLAGS	=	$(SYSCONF_CFLAGS_QTOPIA) $(SYSCONF_CFLAGS) $(SYSCONF_CFLAGS_LIB) -DQTOPIA_APP_INTERFACE
INCPATH =	-I$(MOC_DIR)
LFLAGS	=	$(SYSCONF_LFLAGS_QTOPIA) $(SYSCONF_RPATH_QTOPIA) $(SYSCONF_LFLAGS_QT) $(SYSCONF_RPATH_QT) $(SYSCONF_LFLAGS) $(QT_LFLAGS_MT)
LIBS	=	$(SUBLIBS) -lqpe $(SYSCONF_LIBS_QTOPIA) $(SYSCONF_LIBS_QT) $(SYSCONF_LIBS_QTAPP)
MOC	=	$(SYSCONF_MOC)
UIC	=	$(SYSCONF_UIC)

####### Target

DESTDIR = $(QPEDIR)/plugins/textcodecs/
VER_MAJ = 1
VER_MIN = 0
VER_PATCH = 0
TARGET	= jp
TARGET1 = lib$(TARGET).so.$(VER_MAJ)

####### Files

HEADERS =	jpimpl.h \
		qeucjpcodec.h \
		qjiscodec.h \
		qjpunicode.h \
		qsjiscodec.h
SOURCES =	jpimpl.cpp \
		qeucjpcodec.cpp \
		qjiscodec.cpp \
		qjpunicode.cpp \
		qsjiscodec.cpp
OBJECTS =	$(OBJECTS_DIR)/jpimpl.o \
		$(OBJECTS_DIR)/qeucjpcodec.o \
		$(OBJECTS_DIR)/qjiscodec.o \
		$(OBJECTS_DIR)/qjpunicode.o \
		$(OBJECTS_DIR)/qsjiscodec.o
INTERFACES =    
UICDECLS =      
UICIMPLS =      
SRCMOC	=	
OBJMOC	=	


####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules


all: $(DESTDIR)$(SYSCONF_LINK_TARGET)

$(DESTDIR)$(SYSCONF_LINK_TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) $(SUBLIBS)
	$(SYSCONF_LINK_LIB)

moc: $(SRCMOC)

tmake:
	tmake jp.pro

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(UICIMPLS) $(UICDECLS)
	-rm -f *~ core
	-rm -f allmoc.cpp

####### Extension Modules

listpromodules:
	@echo 

listallmodules:
	@echo 

listaddonpromodules:
	@echo 

listaddonentmodules:
	@echo 


REQUIRES=

####### Sub-libraries


###### Combined headers



####### Compile

$(OBJECTS_DIR)/jpimpl.o: jpimpl.cpp \
		jpimpl.h \
		qeucjpcodec.h \
		qjpunicode.h \
		qjiscodec.h \
		qsjiscodec.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $(OBJECTS_DIR)/jpimpl.o jpimpl.cpp

$(OBJECTS_DIR)/qeucjpcodec.o: qeucjpcodec.cpp \
		qeucjpcodec.h \
		qjpunicode.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $(OBJECTS_DIR)/qeucjpcodec.o qeucjpcodec.cpp

$(OBJECTS_DIR)/qjiscodec.o: qjiscodec.cpp \
		qjiscodec.h \
		qjpunicode.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $(OBJECTS_DIR)/qjiscodec.o qjiscodec.cpp

$(OBJECTS_DIR)/qjpunicode.o: qjpunicode.cpp \
		qjpunicode.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $(OBJECTS_DIR)/qjpunicode.o qjpunicode.cpp

$(OBJECTS_DIR)/qsjiscodec.o: qsjiscodec.cpp \
		qsjiscodec.h \
		qjpunicode.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $(OBJECTS_DIR)/qsjiscodec.o qsjiscodec.cpp


