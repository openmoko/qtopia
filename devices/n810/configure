# Device-specific configuration
-xplatform nokia
-arch arm
-prefix /opt/Qtopia
-languages en_US

# For the touchscreen
-extra-qtopiacore-config "-qt-mouse-tslib" 

# Limit the bit depths
-extra-qtopiacore-config "-depths 8,16,32"

# This lets the device build in or out of scratchbox.
-eval 'if ($ENV{IN_SCRATCHBOX}) { opt("platform") = "linux-scratchbox-g++"; opt("xplatform") = "scratchbox"; my $ref = opt("extra_dqt_config"); push(@$ref, "-arch i386", "-no-qt3support"); $ref = opt("extra_qte_config"); push(@$ref, "-host-arch i386"); }'

