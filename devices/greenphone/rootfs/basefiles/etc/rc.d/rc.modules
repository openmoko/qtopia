#!/bin/sh

# redirect all output to /dev/null
exec 1>/dev/null
exec 2>/dev/null

case "$1" in
    boot)
        splash "Loading filesystem" "modules"

        # FAT Support
        insmod fat
        insmod vfat
        insmod nls_cp437
        insmod nls_iso8859-1
        insmod nls_utf8
        insmod docparatable
        ;;
    *)
        splash -p + "Loading modules"

        # Loopback block device
        insmod loop

        # Networking and PPP
        insmod af_packet
        insmod unix
        insmod slhc
        insmod ppp_generic
        insmod ppp_async

        # USB
        insmod usbdcore
        insmod net_fd if_name=eth
        insmod bvd_bi

        # Multimedia interfaces
        insmod omega_i2c
        insmod videodev
        insmod omega_camera
        insmod soundcore
        insmod greenphone-sound
        insmod wm9713-ts
        insmod s1d19120

        # Misc Hardware
        insmod hsav_detect
        insmod omega_alarm
        insmod omega_rtcalarm
        insmod omega_bcm2121
        insmod omega_chgled
        insmod omega_spi
        insmod omega_vibrator
        insmod omega_kpbl
        insmod pseudo_serial

        # Power Management
        insmod omega_pmu
        insmod omega_power
        insmod omega_poweroff

        # miniSD Card
        insmod mmc_base
        insmod mmc_omega
#        insmod p300wlan

        # Bluetooth
        insmod omega_bt
        insmod bluez
        insmod l2cap
        insmod sco
        insmod hci_uart
        insmod rfcomm

        # NFS Support
        insmod sunrpc
        insmod lockd
        insmod nfs
        ;;
esac

