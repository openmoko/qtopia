<page name="callscreen" base="themes/gel">
    <image name="background" src="bground" tile="yes" color="Background"/>
    <layout orientation="vertical" spacing="0" rect="0,0,0,0">
	<list name="callscreen" rect="0,0,0x-1" separator="1" expanding="yes" vspath="/UI/CallScreen">
	    <template name="active" rect="0,0,0x35"> 
		<image name="active_bg" rect="0,0,0,0" src="callbox" stretch="145,147" color="#50D914"/>
		<status name="conference" rect="4,3,16x16" imageon="default/conference" on="expr:@Conference"/>
		<text name="identifier" rect="20,1,0,0" bold="yes">
		    expr:@Identifier
		</text>
		<text name="status" rect="20,14,0,0">
		    expr:@Duration . " (" . @State . ")"
		</text>
		<image name="contact" rect="-34,3,24x28" scale="yes" src="expr:@Photo"/>
	    </template>
	    <template name="incoming" rect="0,0,0x35" >
		<image name="incoming_bg" rect="0,0,0,0" src="callbox" stretch="145,147" color="Base" />
		<text name="identifier" rect="20,1,0,0" bold="yes">
		    expr:@Identifier
		</text>
		<text name="status" rect="20,14,0,0">
		    expr:@Duration . " (" . @State . ")"
		</text>
		<image name="contact" rect="-34,3,24x28" scale="yes" src="expr:@Photo"/>
	    </template>
	    <template name="outgoing" rect="0,0,0x35">
		<image name="outgoing_bg" rect="0,0,0,0" src="callbox" stretch="145,147" color="Background" />
		<text name="identifier" rect="20,1,0,0" bold="yes">
		    expr:@Identifier
		</text>
		<text name="status" rect="20,14,0,0">
		    expr:@Duration . " (" . @State . ")"
		</text>
		<image name="contact" rect="-34,3,24x28" scale="yes" src="expr:@Photo"/>
	    </template>
	    <template name="onhold" rect="0,0,0x35">
		<image name="onhold_bg" rect="0,0,0,0" src="callbox" stretch="145,147" color="#A3A10E" />
		<status name="conference" rect="4,3,16x16" imageon="default/conference" on="expr:@Conference"/>
		<text name="identifier" rect="20,1,0,0" bold="yes">
		    expr:@Identifier
		</text>
		<text name="status" rect="20,14,0,0">
		    expr:@Duration . " (" . @State . ")"
		</text>
		<image name="contact" rect="-34,3,24x28" scale="yes" src="expr:@Photo"/>
	    </template>
	    <template name="dropped" rect="0,0,0x35">
		<image name="dropped_bg" rect="0,0,0,0" src="callbox" stretch="145,147" color="#AA2222" />
		<text name="identifier" rect="20,1,0,0" bold="yes">
		    expr:@Identifier
		</text>
		<text name="status" rect="20,14,0,0">
		    expr:@Duration . " (" . @State . ")"
		</text>
		<image name="contact" rect="-34,3,24x28" scale="yes" src="expr:@Photo"/>
	    </template>
	    <template name="selected" rect="0,0,0x35">
		<image name="selected_bg" rect="0,0,0,0" src="callbox" stretch="145,147" color="Highlight" />
		<status name="conference" rect="4,3,16x16" imageon="default/conference" on="expr:@Conference"/>
		<text name="identifier" rect="20,1,0,0" color="HighlightedText" bold="yes">
		    expr:@Identifier
		</text>
		<text name="status" rect="20,14,0,0" color="HighlightedText">
		    expr:@Duration . " (" . @State . ")"
		</text>
		<image name="contact" rect="-34,3,24x28" scale="yes" src="expr:@Photo"/>
	    </template>
	</list>
	<widget name="callscreennumber" rect="0,0,0x-1" bold="yes" color="Text" size="14"/>
	<rect name="keypad-box" rect="0,-101,0,0" transient="yes" active="no" keypad="no">
	    <image name="keypad-box-bg" rect="0,0,0x101" src="calllistdialerbg" scale="no" color="Highlight" />
	    <rect name="keypad-hide-container" rect="-18,2,16x16" interactive="yes">
		<image rect="0,0,16x16" name="keypad-bg" src="button_tiny" scale="no" color="Highlight"/>
		<image name="keypad-hide" rect="2,2,12x12" src="keypad-hide" scale="yes" interactive="yes"/>
	    </rect>
	    <layout name="keypad" rect="0,0,0x101" orientation="vertical" spacing="0" align="vcenter" separator="1">
		<layout name="horizontal" rect="0,0,0x24" orientation="horizontal" spacing="-1" align="hcenter">
		    <group rect="0,4,32x24" name="one" interactive="yes">
			<image rect="0,0,0,0" name="one_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="one_fg" src="1" scale="yes"/>
		    </group>
		    <group rect="0,4,32x24" name="two" interactive="yes">
			<image rect="0,0,0,0" name="two_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="two_fg" src="2" scale="yes"/>
		    </group>
		    <group rect="0,4,32x24" name="three" interactive="yes">
			<image rect="0,0,0,0" name="three_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-1,-1" name="three_fg" src="3" scale="yes"/>
		    </group>
		</layout>
		<layout rect="0,0,0x24" orientation="horizontal" spacing="-1" align="hcenter">
		    <group rect="00,0,32x24" name="four" interactive="yes">
			<image rect="0,0,0,0" name="four_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="four_fg" src="4" scale="yes"/>
		    </group>
		    <group rect="0,0,32x24" name="five" interactive="yes">
			<image rect="0,0,0,0" name="five_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="five_fg" src="5" scale="yes"/>
		    </group>
		    <group rect="0,0,32x24" name="six" interactive="yes">
			<image rect="0,0,0,0" name="six_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="six_fg" src="6" scale="yes"/>
		    </group>
		</layout>
		<layout rect="0,0,0x24" orientation="horizontal" spacing="-1" align="hcenter">
		    <group rect="0,0,32x24" name="seven" interactive="yes">
			<image rect="0,0,0,0" name="seven_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="seven_fg" src="7" scale="yes"/>
		    </group>
		    <group rect="0,0,32x24" name="eight" interactive="yes">
			<image rect="0,0,0,0" name="eight_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="eight_fg" src="8" scale="yes"/>
		    </group>
		    <group rect="0,0,32x24" name="nine" interactive="yes">
			<image rect="0,0,0,0" name="nine_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="nine_fg" src="9" scale="yes"/>
		    </group>
		</layout>
		<layout rect="0,0,0x24" orientation="horizontal" spacing="-1" align="hcenter">
		    <group rect="0,0,32x24" name="star" interactive="yes">
			<image rect="0,0,0,0" name="star_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="star_fg" src="star" scale="yes"/>
		    </group>
		    <group rect="0,0,32x24" name="zero" interactive="yes">
			<image rect="0,0,0,0" name="zero_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="zero_fg" src="0" scale="yes"/>
		    </group>
		    <group rect="0,0,32x24" name="hash" interactive="yes">
			<image rect="0,0,0,0" name="hash_bg" src="button_sm" color="Highlight" onclick="src=buttonp_sm;color=Highlight" scale="no" />
			<image rect="1,1,-2,-2" name="hash_fg" src="hash" scale="yes"/>
		    </group>
		</layout>
	    </layout>
	</rect>
	<rect name="keypad-show-container" rect="0,-22,0x22" interactive="yes"  keypad="no" tile="yes" transient="yes" active="yes">
	    <image name="keypad-show-background" rect="0,0,0x22" src="popupbar" color="Highlight" scale="no" />
	    <rect name="keypad-show-subcontainer" rect="0,0,0x22">
		<layout name="keypad-show" rect="0,0,0x22" orientation="horizontal" spacing="-1" align="hcenter">
		    <image name="keypad-show" rect="0,-22,22x22" src="default/dialerbutton" onclick="src=default/dialerbuttonp;color=Highlight" interactive="no" keypad="no" scale="yes"/>
		</layout>
	    </rect>
	</rect>
    </layout>
</page>
