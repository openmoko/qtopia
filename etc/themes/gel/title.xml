<page name="title" base="themes/gel" rect="0,0,0x10%" background="topbar" stretch="32,144" transparent="yes">
    <rect name="reserved" rect="0,0,0x1" color="None" brush="None"/>
    <image rect="0,0,0x0" src="topbar" scale="vertical" stretch="32,144" orientation="horizontal" color="Highlight">
	<level name="battery" rect="-22,2,17x19" src="battery" onclick="color=Highlight" count="5" interactive="yes" min="0" max="100" delay="1000" loop="0" play="expr:@/Accessories/Battery/Charging == true">
	    expr:@/Accessories/Battery/VisualCharge
	</level>
        <exclusive>
          <level name="signal" rect="-44,2,20x19" src="signal" count="5" onclick="color=Highlight" interactive="yes" min="0" max="100" active="expr:@/Hardware/Accessories/SignalSources/DefaultSignal/Values/SignalStrength">
                expr:@/Hardware/Accessories/SignalSources/DefaultSignal/Values/SignalStrength
	    </level>
            <widget name="inputmethod" rect="-44,2,20x19" transient="yes" active="expr:@/UI/IMVisible"/>
        </exclusive>

	<status name="call_active" rect="-59,2,14x19" imageon="oncall" onclick="coloron=Highlight" interactive="yes" on="expr:@/Communications/Calls/ActiveCalls > 0"/>
	<status name="roaming" rect="-78,2,17x19" imageon="roaming" onclick="coloron=Highlight" interactive="yes" on="expr:@/Telephony/Status/Roaming"/>

	<exclusive rect="6,3,-77,20">
	    <text name="datetime" short="yes" bold="yes" size="7" color="HighlightedText" outline="#000000" interactive="yes">
		expr:@/UI/DisplayTime/BriefDate . " " . @/UI/DisplayTime/Time
	    </text>
	    <text name="caption" size="7" bold="yes" color="HighlightedText" outline="#000000" transient="yes" active="expr:@/UI/ActiveWindow/Caption != false">
		expr:@/UI/ActiveWindow/Caption
	    </text>
	</exclusive>
    </image>
</page>
