<page name="bootcharger" base="themes/portal" rect="0,0,0x0">
    <image rect="0,0,0x0" src="texture1" tile="yes" color="Background">
        <layout rect="25%,10%,50%x42" align="hcenter,vcenter">
            <level name="battery" rect="0,0,36x42" src="battery" scale="yes" count="5" width="12" min="0" max="100" delay="1000" loop="0" play="expr:@/Accessories/Battery/Charging == true">
                expr:@/Accessories/Battery/VisualCharge
            </level>
        </layout>
        <rect rect="0,-75,0x50" color="#72715a" brush="Base" alpha="100">
            <layout rect="3,0,40x100%" align="vcenter">
                <image rect="0,0,40x40" src="charge"/>
            </layout>
            <exclusive>
                <text rect="40,0,-3,50" size="7" color="Text" align="hcenter,vcenter" format="RichText" transient="yes" active="expr:@/Accessories/Battery/Charge &lt; 100">
                    <tr><trtext>Charging battery</trtext></tr>
                </text>
                <text rect="40,0,-3,50" size="7" color="Text" align="hcenter,vcenter" format="RichText" transient="yes" active="expr:@/Accessories/Battery/Charge == 100">
                    <tr><trtext>Battery fully charged</trtext></tr>
                </text>
            </exclusive>
        </rect>
    </image>
</page>
